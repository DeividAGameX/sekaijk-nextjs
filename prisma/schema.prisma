generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define model user

model Users {
  id                  Int                @id @default(autoincrement())
  name                String             @unique
  email               String             @unique
  password            String
  avatar              String
  banner              String?
  description         String?
  slug                String?            @unique
  rolesId             Int
  publicOrder         Int?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @default(now()) @updatedAt
  Posts               Posts[]
  Roles               Roles              @relation(fields: [rolesId], references: [id])
  social              Social[]
  FoldersResources    UsersFolders[]
  UsersResources      UsersResources[]
  CapReview           CapReview[]
  TeamRoles           TeamRole[]
  PostReviewAuthor    PostsReview[]      @relation("PostReviewAuthor")
  PostReviewEditor    PostsReview[]      @relation("PostReviewEditor")
  NotificationUser    NotificationUser[]
  YTVideoReviewAuthor YtVideosReview[]   @relation("YTVideoReviewAuthor")
  YTVideoReviewEditor YtVideosReview[]   @relation("YTVideoReviewEditor")
  VideoMake           YtVideos[]         @relation("VideoMake")
  MyVideos            YtVideos[]
}

model Social {
  id     Int    @id @default(autoincrement())
  icon   String
  url    String
  userId Int
  user   Users  @relation(fields: [userId], references: [id])
}

model Notification {
  id        String           @id @default(cuid())
  title     String
  message   String
  type      NotificationType
  targetUrl String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  recipients NotificationUser[]
}

model NotificationUser {
  id             String    @id @default(cuid())
  userId         Int
  notificationId String
  read           Boolean   @default(false)
  readAt         DateTime?

  user         Users        @relation(fields: [userId], references: [id])
  notification Notification @relation(fields: [notificationId], references: [id])

  @@unique([userId, notificationId])
}

model UsersFolders {
  id        String           @id @default(cuid())
  name      String
  parentId  String?
  usersId   Int
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  Resources UsersResources[]
  Users     Users            @relation(fields: [usersId], references: [id])
  parent    UsersFolders?    @relation("FolderToSubfolder", fields: [parentId], references: [id])
  children  UsersFolders[]   @relation("FolderToSubfolder")
}

model UsersResources {
  id             Int           @id @default(autoincrement())
  name           String
  userId         Int
  resourceId     String
  url            String
  usersFoldersId String?
  cratedAt       DateTime      @default(now())
  updatedAt      DateTime      @default(now()) @updatedAt
  type           ResourceType  @default(IMAGE)
  user           Users         @relation(fields: [userId], references: [id])
  UsersFolders   UsersFolders? @relation(fields: [usersFoldersId], references: [id])
}

model Roles {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  description String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @updatedAt
  users       Users[]
  Permissions Permissions[]
}

model TeamRole {
  id        Int      @id @default(autoincrement())
  name      String
  isSection Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  Users     Users[]
}

model Permissions {
  id         Int      @id @default(autoincrement())
  permission String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  roleId     Int
  role       Roles    @relation(fields: [roleId], references: [id])
}

// ----
// Models for posts

model Posts {
  id          Int           @id @default(autoincrement())
  title       String
  banner      String?
  description String
  body        String?
  slug        String?       @unique
  draftId     Int?
  status      PostsStatus   @default(DRAFT)
  authorId    Int
  categoryId  Int?
  ytVideo     String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now()) @updatedAt
  author      Users         @relation(fields: [authorId], references: [id])
  Categories  Categories?   @relation(fields: [categoryId], references: [id])
  Tags        Tags[]
  PostsReview PostsReview[]
}

model PostsReview {
  id         String        @id @default(uuid())
  postId     Int
  reviewBody String
  comment    String?
  status     REVIEW_STATUS @default(PENDING)
  active     Boolean       @default(true)
  authorId   Int
  editorId   Int?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @default(now()) @updatedAt
  author     Users         @relation("PostReviewAuthor", fields: [authorId], references: [id])
  editor     Users?        @relation("PostReviewEditor", fields: [editorId], references: [id])
  Posts      Posts         @relation(fields: [postId], references: [id])
}

model Categories {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  slug        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  posts       Posts[]
}

model Tags {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  color       String
  description String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @default(now()) @updatedAt
  posts       Posts[]
  Animes      Animes[]
  YtVideos    YtVideos[]
}

// ----
// Dashboard
model AnalyticsSnapshot {
  id                     String                   @id @default(cuid())
  date                   DateTime
  pageViews              Int
  totalUsers             Int
  newUsers               Int
  bounceRate             Float // Porcentaje: 0.0 a 100.0
  avgSessionDuration     Float // En segundos
  createdAt              DateTime                 @default(now())
  AnalyticsTopPage       AnalyticsTopPage[]
  AnalyticsTrafficSource AnalyticsTrafficSource[]
  AnalyticsCountry       AnalyticsCountry[]
  AnalyticsDevice        AnalyticsDevice[]
  AnalyticsTopTitle      AnalyticsTopTitle[]
}

model AnalyticsTopPage {
  id         String @id @default(cuid())
  snapshotId String
  path       String
  pageViews  Int

  snapshot AnalyticsSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
}

model AnalyticsTopTitle {
  id         String @id @default(cuid())
  snapshotId String
  title      String
  pageViews  Int

  snapshot AnalyticsSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
}

model AnalyticsTrafficSource {
  id         String @id @default(cuid())
  snapshotId String
  channel    String // ej. "Organic Search", "Direct", "Referral"
  sessions   Int

  snapshot AnalyticsSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
}

model AnalyticsCountry {
  id         String @id @default(cuid())
  snapshotId String
  country    String
  totalUsers Int

  snapshot AnalyticsSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
}

model AnalyticsDevice {
  id         String @id @default(cuid())
  snapshotId String
  device     String // "desktop", "mobile", "tablet"
  totalUsers Int

  snapshot AnalyticsSnapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)
}

// ----
// Models for anime (Pending)

model Animes {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  body        String?
  banner      String?
  episodes    Int         @default(0)
  slug        String?
  draftId     Int?
  postStatus  PostsStatus @default(DRAFT)
  status      AnimeStatus @default(ONGOING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now()) @updatedAt
  CapReview   CapReview[]
  Tags        Tags[]
}

model CapReview {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  banner      String?
  body        String
  animeId     Int
  slug        String?     @unique
  status      PostsStatus @default(DRAFT)
  draftId     Int?
  author      Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now()) @updatedAt
  Anime       Animes      @relation(fields: [animeId], references: [id])
  Author      Users       @relation(fields: [author], references: [id])
}

// ----
// Models for Social media

model YtVideos {
  id            String           @id @default(uuid())
  title         String
  description   String?
  thumbnail     String?
  videoId       String?
  cloudinaryId  String?
  cloudinaryUrl String?
  ytUrl         String?
  type_video    YoutubeType      @default(VIDEO)
  VideoStatus   PostsStatus      @default(DRAFT)
  usersId       Int
  publishedAt   DateTime?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @default(now()) @updatedAt
  Author        Users            @relation("VideoMake", fields: [usersId], references: [id])
  Members       Users[]
  Tags          Tags[]
  VideoReviews  YtVideosReview[]
}

model YtVideosReview {
  id         String        @id @default(uuid())
  ytVideosId String?
  comment    String?
  notes      Json?
  status     REVIEW_STATUS @default(PENDING)
  active     Boolean       @default(true)
  authorId   Int
  editorId   Int?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @default(now()) @updatedAt
  author     Users         @relation("YTVideoReviewAuthor", fields: [authorId], references: [id])
  editor     Users?        @relation("YTVideoReviewEditor", fields: [editorId], references: [id])
  YtVideos   YtVideos?     @relation(fields: [ytVideosId], references: [id])
}

// Enums for your models
// Enums for Post
enum PostsStatus {
  DRAFT
  REVIEW
  PUBLISHED
  ARCHIVED
}

enum ResourceType {
  VIDEO
  AUDIO
  DOCUMENT
  IMAGE
}

// Enums for Users
enum NotificationType {
  INFO
  WARNING
  SUCCESS
  SYSTEM
  POST_REVIEW
  POST_REVIEW_ACCEPTED
  POST_REVIEW_CHANGED
  POST_PUBLISHED
  POST_ARCHIVED
  VIDEO_REVIEW
  VIDEO_REVIEW_ACCEPTED
  VIDEO_REVIEW_CHANGED
  VIDEO_PUBLISHED
  VIDEO_ARCHIVED
  VIDEO
}

// Enums for Anime
enum AnimeStatus {
  ONGOING
  COMPLETED
  CANCELLED
}

enum REVIEW_STATUS {
  PENDING
  APPROVED
  REJECTED
}

// Enums for Social Media

enum YoutubeType {
  VIDEO
  SHORTS
}
